<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="30dp"
    android:background="@color/white"
    tools:context=".ui.User.Auth.RegisterScreen">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/signUpBackButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/exit_registeration"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm"
            android:textSize="75sp"
            android:fontFamily="@font/baloo_bhai"
            android:layout_marginTop="25dp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:textAllCaps="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You need to confirm registeration to continue"
            android:layout_gravity="center"
            android:textColor="#303030"
            android:fontFamily="@font/baloo_bhai"
            android:textSize="17sp"
            android:textAlignment="center"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/signup_phone_number"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter you name"
            android:textColorHint="@color/black"
            app:boxStrokeColor="@color/black"
            app:boxStrokeWidthFocused="2dp"
            app:endIconMode="clear_text"
            app:endIconTint="@color/black"
            app:hintTextColor="@color/black"
            app:startIconDrawable="@drawable/full_name_icon"
            app:startIconTint="@color/black"
            android:layout_marginTop="40dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/user_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="text"
                android:textColor="@color/black"
                android:textCursorDrawable="@null" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_gravity="left"
            android:fontFamily="@font/baloo_bhai"
            android:text="Enter the OTP message"
            android:layout_marginLeft="13dp"
            android:textColor="#303030"
            android:textSize="17sp" />

        <com.chaos.view.PinView
            android:id="@+id/otp_pinView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:itemCount="6"
            app:itemWidth="50dp"
            app:itemHeight="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            style="@style/PinWidget.PinView"
            app:lineColor="@color/black"
            android:itemBackground="@color/lightWhite"
            android:inputType="number"
            android:cursorVisible="true"
            app:cursorColor="@color/black"
            app:hideLineWhenFilled="true"
            app:itemRadius="5dp"
            />

        <Button
            android:id="@+id/register_confirm_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/black"
            android:elevation="5dp"
            android:onClick="callVerifyOTPScreen"
            android:text="Confirm"
            android:textSize="25sp"
            android:textColor="@color/black"
            tools:ignore="OnClick" />


    </LinearLayout>


</ScrollView>