<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginVertical="10dp"
    android:backgroundTint="@color/lightWhite"
    android:layout_margin="8dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="7dp"
        >
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginVertical="5dp"
        >

        <TextView
            android:id="@+id/mandop_posts_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="2"
            android:background="@color/banner_background"
            android:elevation="5dp"
            android:fontFamily="@font/baloo_bhai"
            android:gravity="start"
            android:paddingStart="10dp"
            android:text="Mohamed Tarek"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/mandop_posts_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="2"
            android:background="@color/banner_background"
            android:elevation="5dp"
            android:fontFamily="@font/baloo_bhai"
            android:gravity="start"
            android:paddingStart="10dp"
            android:text="15/7/2021"
            android:textSize="15sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/mandop_post_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="###################################################"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginHorizontal="5dp"
        />

<com.google.android.material.imageview.ShapeableImageView
    android:id="@+id/img_product_picture"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:adjustViewBounds="true"
    android:layout_gravity="start"
    android:layout_marginEnd="10dp"
    android:src="@drawable/add_post"
    />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/banner_background"

    >

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginVertical="5dp"
        >

        <TextView
            android:id="@+id/mandop_posts_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="start"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="2"
            android:background="@color/banner_background"
            android:fontFamily="@font/baloo_bhai"
            android:paddingStart="10dp"
            android:text="120 carton"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/add_post_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp"
            android:layout_marginVertical="10dp"
            android:layout_weight="2"
            android:background="@color/colorPrimary"
            android:elevation="5dp"
            android:gravity="center"
            android:text="Contact Request"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:clickable="true"/>

    </LinearLayout>

</LinearLayout>
</LinearLayout>
</androidx.cardview.widget.CardView>